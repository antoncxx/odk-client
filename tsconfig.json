{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "removeComments": true,
    "strict": false,
    "declaration": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2021"],

    "baseUrl": ".",
    "paths": {
      "@library1/*": ["odk/library-1/src/*"],
      "@library2/*": ["odk/library-2/src/*"],
      "@odk/*": ["odk/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "odk/library-1/src/**/*",
    "odk/library-2/src/**/*",
    "odk/src/**/*"
  ]
}
